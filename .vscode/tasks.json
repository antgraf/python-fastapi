{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "pythonfastapi:latest",
				"dockerfile": "${workspaceFolder}/PythonFastApi/Dockerfile",
				"context": "${workspaceFolder}/PythonFastApi",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"python": {
				"args": [
					"main:app",
					"--host",
					"0.0.0.0",
					"--port",
					"8811"
				],
				"module": "uvicorn"
			},
			"dockerRun": {
				"containerName": "PythonFastApi",
				"ports": [
					{
						"containerPort": 8811,
						"hostPort": 8811
					}
				]
			}
		}
	]
}